<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNBackGrid"
    android:padding="2dp"
    tools:showIn="@layout/fragment_nback"
    android:orientation="vertical">

    <!-- Row 0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/case0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="1"/>
        <ImageView android:id="@+id/case1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="2"/>
        <ImageView android:id="@+id/case2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="3"/>
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/case3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="4"/>
        <ImageView android:id="@+id/case4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="5"/>
        <ImageView android:id="@+id/case5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="6"/>
    </LinearLayout>


    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/case6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="7"/>
        <ImageView android:id="@+id/case7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="8"/>
        <ImageView android:id="@+id/case8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorIdleSquare"
            android:tint="@color/colorActiveLetter"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="false"
            android:contentDescription="9"/>
    </LinearLayout>

</LinearLayout>
