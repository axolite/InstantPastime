<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zbox"

    tools:context=".MemoryActivity">

    <LinearLayout
        android:id="@+id/imagesLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Friends"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Kids"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Gym"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Gym"
                app:srcCompat="@drawable/back_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="GasStation"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img06"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Shopping"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img07"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Train"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img08"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Gym"
                app:srcCompat="@drawable/back_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img09"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Bank"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Work"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Home"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Gym"
                app:srcCompat="@drawable/back_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"

                android:scaleType="fitCenter"
                android:tag="Vacation"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"

                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"

                android:tag="School"
                app:srcCompat="@drawable/back_card" />


            <ImageView
                android:id="@+id/img15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:tag="CurrentLocation"
                app:srcCompat="@drawable/back_card" />

            <ImageView
                android:id="@+id/img16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:tag="Gym"
                app:srcCompat="@drawable/back_card" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>